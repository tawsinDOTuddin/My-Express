<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@drawable/abc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uddin.tawsin.myexpress.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">



    <Button
        android:text="SCHEDULE LIST"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:id="@+id/buttonSCHED"
        android:onClick="gotosched"
        android:background="#1C2833"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp" />

    <Button
        android:text="STATION DETAILS"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:id="@+id/buttonDET"
        android:onClick="gotodet"
        android:background="#1C2833"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp" />
</LinearLayout>
